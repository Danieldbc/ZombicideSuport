<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zombicidefondo"
    tools:context="edu.eseiaat.upc.pma.manuel.daniel.zombicidesuport.SelectionActivity">


    <RelativeLayout
        android:id="@+id/Personaje1"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@id/Personajes"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Personaje2"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@id/Personajes"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Personaje3"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@id/Personajes"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="15dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Personaje4"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@id/Personajes"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Personaje5"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@id/Personajes"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="90dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Personaje5"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@id/Personajes"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="90dp">

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ListaPersonajes"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:background="@drawable/ladrillos"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/relativeLayout" />

    <Button
        android:id="@+id/Atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="atras"
        android:layout_below="@+id/HabRoja3"
        android:layout_toEndOf="@+id/DescripcionPersonaje"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/Empezar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empezar"
        android:layout_below="@+id/HabRoja3"
        android:layout_toEndOf="@+id/Atras"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/DescripcionPersonaje"
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:saveEnabled="false"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/pwatts"
        android:layout_below="@+id/ListaPersonajes"
        android:layout_toEndOf="@+id/relativeLayout" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="250dp"
        android:layout_height="110dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/madera"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/NombreSala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Sala"
            android:layout_alignBottom="@+id/Sala"
            android:layout_alignStart="@+id/NombrePersona"
            android:text="Sala 3"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/NombrePersona"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Pedro"
            android:textColor="@android:color/black"
            android:layout_marginEnd="19dp"
            android:layout_alignBottom="@+id/Nombre"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Nombre"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="19dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/NombrePersona"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/Sala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Sala"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/Nombre" />

    </RelativeLayout>

    <TextView
        android:id="@+id/HabAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="+1 acción de combate a distancia"
        android:textAlignment="center"
        android:textSize="11dp"
        android:textColor="@android:color/black"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_toEndOf="@+id/DescripcionPersonaje" />

    <TextView
        android:id="@+id/HabAmarilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFEE58"
        android:text="+1 acción de combate a distancia"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="11dp"
        android:layout_below="@+id/HabAzul"
        android:layout_toEndOf="@+id/DescripcionPersonaje"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/HabNaranja1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HabAmarilla"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/DescripcionPersonaje"
        android:background="@android:color/holo_orange_dark"
        android:text="+1 acción de combate a distancia"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/HabNaranja2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:text="+1 acción de combate a distancia"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="11dp"
        android:layout_below="@+id/HabNaranja1"
        android:layout_toEndOf="@+id/DescripcionPersonaje"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/HabRoja1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:text="+1 acción de combate a distancia"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="11dp"
        android:layout_below="@+id/HabNaranja2"
        android:layout_toEndOf="@+id/DescripcionPersonaje"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/HabRoja2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:text="+1 acción de combate a distancia"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="11dp"
        android:layout_below="@+id/HabRoja1"
        android:layout_toEndOf="@+id/DescripcionPersonaje"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/HabRoja3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:text="+1 acción de combate a distancia"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="11dp"
        android:layout_below="@+id/HabRoja2"
        android:layout_toEndOf="@+id/DescripcionPersonaje"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/Personajes"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="49dp"
        android:background="@drawable/tabla"
        android:text="Personajes"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_above="@+id/HabNaranja1"
        android:layout_alignStart="@+id/Personaje1" />

    <CheckBox
        android:id="@+id/ModoZombie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo Zombie"
        android:layout_below="@+id/DescripcionPersonaje"
        android:layout_alignStart="@+id/DescripcionPersonaje" />

</RelativeLayout>
